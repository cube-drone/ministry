{% extends "base" %}

{% block title %} invites{% endblock title %}

{% block head %}
    {{ super() }}
{% endblock head %}

{% block content %}
<div class="primary-card">
    <div class="content">
        <header id="primary-header">
            <h2><a href="/home">home</a> / invites</h2>
        </header>
        <div class="bump"></div>
        <div class="everything">
            <div class="gutter">
                {% for invite in invites %}
                <div class="panel">

                </div>
                {% endfor %}
                <div class="panel">
                </div>
                <div class="panel">
                    <p> {{ number_available_invites }} available invites </p>
                </div>
                {% if can_create_invite %}
                    <form method="post" action="/auth/invite" class="panel">
                        <h2>Create Invite</h2>
                        <div class="button-horizontal-center">
                            <button title="Create Invite" class="pushbutton green" name="submit" value="Login">{{ icon_circle_check() | safe }}</button>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock content %}